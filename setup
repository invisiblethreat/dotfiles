#!/bin/bash

if [ ! -d $HOME/bin ]; then
  mkdir $HOME/bin
fi

./link_dotfiles

if [ "$1" != "noroot" ]; then

  if [ "$(uname)" == "Darwin" ]; then
    ./setup_darwin
  fi

  if [ -e /etc/debian_version ]; then
    sudo ./config_debian
  fi

else
  echo "Not attempting to become root- no packages will be installed"
fi

./config_fonts
./config_zsh
./config_nvim
./helpers/stub_files
./helpers/hushlogin
