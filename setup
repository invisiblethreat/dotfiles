#!/bin/bash

sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

./link_dotfiles
./config_zsh
./config_vim
./stub_files

if [ "$(uname)" == "Darwin" ]; then
  ./config brew
fi

if [ -e /etc/debian_version ]; then
  sudo ./config_debian
fi

./config_fonts
