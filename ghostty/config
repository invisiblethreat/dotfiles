# ghostty +list-fonts
# ghostty +show-config --default
# ghostty +show-config --default --docs

shell-integration-features = no-cursor
font-size = 16
cursor-style = block
cursor-style-blink = true
copy-on-select = clipboard
theme = Material Design Colors

keybind = command+left=previous_tab
keybind = command+right=next_tab

keybind = command+s>h=goto_split:previous
keybind = command+s>l=goto_split:next
keybind = command+s>-=new_split:down
keybind = command+s>-=new_split:down
